{
  "dataset_reader": {
    "type": "full_context_relations"
  },
  "train_data_path": "data/SemEval2017_FullContext/train.json",
  "validation_data_path": "data/SemEval2017_FullContext/dev.json",
  "test_data_path": "data/SemEval2017_FullContext/test.json",
  "evaluate_on_test": True,
  "model": {
    "type": "relation_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "relative_position_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.5
    },
    "e2e_encoder": {
      "type": "augmented_lstm",
      "input_size" : 100,
      "hidden_size" : 100,
    },
    "left_context_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.5
    },
    "right_context_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.5
    },
    "classifier_feedforward": {
      "input_dim": 300,
      "num_layers": 2,
      "hidden_dims": [200, 4],
      "activations": ["relu", "linear"],
      "dropout": [0.5, 0.5]
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam"
    }
  }
}
